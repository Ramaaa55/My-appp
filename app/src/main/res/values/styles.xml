<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Text Appearances -->
    <style name="TextAppearance.App.Title" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="fontFamily">@font/poppins_bold</item>
    </style>

    <style name="TextAppearance.App.Heading" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:letterSpacing">-0.01</item>
        <item name="fontFamily">@font/poppins_semibold</item>
    </style>

    <style name="TextAppearance.App.Body" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="fontFamily">@font/poppins_regular</item>
    </style>

    <style name="TextAppearance.App.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="fontFamily">@font/poppins_medium</item>
    </style>

    <!-- Button Styles -->
    <style name="Widget.App.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:minHeight">56dp</item>
        <item name="cornerRadius">16dp</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/poppins_medium</item>
    </style>

    <!-- Card Styles -->
    <style name="Widget.App.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/surface</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">0dp</item>
        <item name="rippleColor">@color/overlay_light</item>
    </style>
</resources>

