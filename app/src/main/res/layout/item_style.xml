<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="8dp">

    <!-- Contenedor de la imagen -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/styleCard"
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:cardCornerRadius="12dp"
        app:strokeColor="@color/accent_orange"
        app:strokeWidth="0dp">

        <ImageView
            android:id="@+id/styleImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:layout_marginBottom="4dp"
            android:background="@drawable/image_overlay"
            android:contentDescription="@string/style_image_desc"
            tools:src="@drawable/estilo_japones"/>

    </com.google.android.material.card.MaterialCardView>

    <!-- Texto fuera del CardView -->
    <TextView
        android:id="@+id/styleName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif"
        android:maxLines="1"
        android:ellipsize="end"
        style="@style/TextAppearance.StyleLabel"
        tools:text="JaponÃ©s"/>

</LinearLayout>

