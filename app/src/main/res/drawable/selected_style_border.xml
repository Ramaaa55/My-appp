<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Capa base con gradiente -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="20dp"/>
            <gradient
                android:type="linear"
                android:angle="45"
                android:startColor="#F76B00"
                android:centerColor="#FF9D4D"
                android:endColor="#F76B00"/>
        </shape>
    </item>
    <!-- Capa interior para crear el efecto de borde -->
    <item
        android:left="2dp"
        android:right="2dp"
        android:top="2dp"
        android:bottom="2dp">
        <shape android:shape="rectangle">
            <corners android:radius="18dp"/>
            <solid android:color="#171717"/>
        </shape>
    </item>
</layer-list>