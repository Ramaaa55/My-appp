<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Outer glow effect -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="16dp"/>
            <gradient
                android:type="radial"
                android:gradientRadius="150%p"
                android:startColor="#FF5722"
                android:endColor="#00FF5722"/>
            <size
                android:width="100dp"
                android:height="100dp"/>
        </shape>
    </item>

    <!-- Main border with gradient -->
    <item
        android:left="2dp"
        android:right="2dp"
        android:top="2dp"
        android:bottom="2dp">
        <shape android:shape="rectangle">
            <corners android:radius="14dp"/>
            <gradient
                android:type="linear"
                android:angle="45"
                android:startColor="#FF5722"
                android:centerColor="#FF9800"
                android:endColor="#FF5722"/>
        </shape>
    </item>

    <!-- Inner content area -->
    <item
        android:left="4dp"
        android:right="4dp"
        android:top="4dp"
        android:bottom="4dp">
        <shape android:shape="rectangle">
            <corners android:radius="12dp"/>
            <solid android:color="#1A1A1A"/>
        </shape>
    </item>
</layer-list>